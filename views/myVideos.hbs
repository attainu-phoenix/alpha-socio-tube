      <div class="container">
        {{#each videoArrayOfTwo}}
        <div class="row mt-4" style="margin-right:rem;">
          {{#each this}}
          <div class="col-md-4" id="col">

            <div class="card" id="frame1" style="width: 24rem;">
              <div class="embed-container">
                <video class="video-fluid z-depth-1" width="382" height="200"
                  loop
                  controls>
                  <source src="/uploads/{{fileName}}" type="video/mp4" />
                </video>
                <input type="hidden" id="mongoId" value="{{_id}}">
                <div class="card-body">
                  <h5 class="card-title">{{title}}</h5>
                  <p class="card-text">{{description}}</p>
                </div>
                <a href="#" id="button1" class="btn btn-success">Delete</a>
              </div>
            </div>
          </div>
          {{/each}}
        </div>
        {{/each}}
